<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:IHECLibrary.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
             x:Class="IHECLibrary.Views.HomeView"
             x:DataType="vm:HomeViewModel">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    
    <!-- Barre de navigation -->
    <Grid Grid.Row="0" Background="White" Height="70">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>
      
      <!-- Logo et titre -->
      <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
        <TextBlock Text="IHEC Library" FontSize="24" FontWeight="Bold" Foreground="#2E74A8"/>
      </StackPanel>
      
      <!-- Menu de navigation -->
      <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button Content="Home" Command="{Binding NavigateToHomeCommand}" 
                Background="#E6F2F8" Foreground="#2E74A8" 
                Padding="15,10" Margin="5,0" CornerRadius="20"/>
        <Button Content="Library" Command="{Binding NavigateToLibraryCommand}" 
                Background="Transparent" Foreground="#2E74A8" 
                Padding="15,10" Margin="5,0" CornerRadius="20"/>
        <Button Content="HEC 1.0" Command="{Binding NavigateToChatbotCommand}" 
                Background="Transparent" Foreground="#2E74A8" 
                Padding="15,10" Margin="5,0" CornerRadius="20"/>
        <Button Content="Profile" Command="{Binding NavigateToProfileCommand}" 
                Background="Transparent" Foreground="#2E74A8" 
                Padding="15,10" Margin="5,0" CornerRadius="20"/>
      </StackPanel>
      
      <!-- Recherche et profil -->
      <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">
        <TextBox Text="{Binding SearchQuery}" Watermark="Search books..." Width="200" Margin="0,0,15,0"/>
        <Border CornerRadius="20" Width="40" Height="40" ClipToBounds="True">
          <Image Source="{Binding UserProfilePicture}" Stretch="UniformToFill"/>
        </Border>
        <TextBlock Text="{Binding UserFullName}" VerticalAlignment="Center" Margin="10,0,0,0"/>
      </StackPanel>
    </Grid>
    
    <!-- Contenu principal -->
    <ScrollViewer Grid.Row="1" Padding="20">
      <StackPanel>
        <!-- Message de bienvenue -->
        <TextBlock Text="{Binding WelcomeMessage}" FontSize="24" FontWeight="Bold" Margin="0,10,0,5"/>
        <TextBlock Text="{Binding RecommendationSubtitle}" FontSize="14" Margin="0,0,0,20"/>
        
        <!-- Section de recommandations -->
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
          </Grid.ColumnDefinitions>
          
          <TextBlock Grid.Column="0" Text="Recommended for You" FontSize="18" FontWeight="SemiBold"/>
          <Button Grid.Column="1" Content="View All" Command="{Binding ViewAllRecommendationsCommand}" 
                  Background="Transparent" Foreground="#2E74A8" Padding="0"/>
        </Grid>
        
        <!-- Liste de livres recommandés -->
        <ItemsControl ItemsSource="{Binding RecommendedBooks}" Margin="0,15,0,30">
          <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
              <WrapPanel Orientation="Horizontal" />
            </ItemsPanelTemplate>
          </ItemsControl.ItemsPanel>
          <ItemsControl.ItemTemplate>
            <DataTemplate x:DataType="vm:BookViewModel">
              <Border Background="{Binding BackgroundColor}" Width="220" Height="250" CornerRadius="8" Padding="15" Margin="0,0,15,15">
                <Grid>
                  <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                  </Grid.RowDefinitions>
                  
                  <!-- Icône du livre - replaced with vector graphics -->
                  <Canvas Grid.Row="0" Width="70" Height="70" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <Border Canvas.Left="10" Canvas.Top="10" Width="50" Height="50" 
                            Background="{Binding AvailabilityColor}" CornerRadius="3" />
                    <Border Canvas.Left="12" Canvas.Top="12" Width="46" Height="46" 
                            BorderBrush="White" BorderThickness="2" CornerRadius="3" />
                    <Line Canvas.Left="0" StartPoint="20,18" EndPoint="52,18" Stroke="White" StrokeThickness="1.5" />
                    <Line Canvas.Left="0" StartPoint="20,26" EndPoint="52,26" Stroke="White" StrokeThickness="1.5" />
                    <Line Canvas.Left="0" StartPoint="20,34" EndPoint="52,34" Stroke="White" StrokeThickness="1.5" />
                    <Line Canvas.Left="0" StartPoint="20,42" EndPoint="45,42" Stroke="White" StrokeThickness="1.5" />
                    <Line Canvas.Left="0" StartPoint="20,50" EndPoint="45,50" Stroke="White" StrokeThickness="1.5" />
                  </Canvas>
                  
                  <!-- Statut de disponibilité -->
                  <Border Grid.Row="1" Background="{Binding AvailabilityColor}" CornerRadius="15" 
                          HorizontalAlignment="Center" Padding="10,5" Margin="0,0,0,10">
                    <TextBlock Text="{Binding AvailabilityStatus}" Foreground="White" FontSize="12"/>
                  </Border>
                  
                  <!-- Titre du livre -->
                  <TextBlock Grid.Row="2" Text="{Binding Title}" FontWeight="SemiBold" FontSize="16" 
                             HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"/>
                  
                  <!-- Auteur -->
                  <TextBlock Grid.Row="3" Text="{Binding Author}" FontSize="14" 
                             HorizontalAlignment="Center" Margin="0,5,0,5"/>
                  
                  <!-- Catégorie -->
                  <TextBlock Grid.Row="4" Text="{Binding Category}" FontSize="12" Foreground="Gray" 
                             HorizontalAlignment="Center" Margin="0,0,0,10"/>
                  
                  <!-- Bouton d'action -->
                  <Button Grid.Row="5" Content="{Binding ActionButtonText}" Command="{Binding ActionCommand}" 
                          Background="{Binding ActionButtonBackground}" Foreground="White" 
                          HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
                          VerticalAlignment="Bottom" Height="40" CornerRadius="4"/>
                </Grid>
              </Border>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
        
        <!-- Autres sections (populaires, récents, etc.) peuvent être ajoutées ici -->
      </StackPanel>
    </ScrollViewer>
  </Grid>
</UserControl>
