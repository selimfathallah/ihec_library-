<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:IHECLibrary.ViewModels"
             xmlns:sys="clr-namespace:System;assembly=System.Runtime"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
             x:Class="IHECLibrary.Views.LibraryView"
             x:DataType="vm:LibraryViewModel">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    
    <!-- Barre de navigation -->
    <Grid Grid.Row="0" Background="White" Height="70">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>
      
      <!-- Logo et titre -->
      <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
        <TextBlock Text="IHEC Library" FontSize="24" FontWeight="Bold" Foreground="#2E74A8"/>
      </StackPanel>
      
      <!-- Menu de navigation -->
      <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button Content="Home" Command="{Binding NavigateToHomeCommand}" 
                Background="Transparent" Foreground="#2E74A8" 
                Padding="15,10" Margin="5,0" CornerRadius="20"/>
        <Button Content="Library" Command="{Binding NavigateToLibraryCommand}" 
                Background="#E6F2F8" Foreground="#2E74A8" 
                Padding="15,10" Margin="5,0" CornerRadius="20"/>
        <Button Content="HEC 1.0" Command="{Binding NavigateToChatbotCommand}" 
                Background="Transparent" Foreground="#2E74A8" 
                Padding="15,10" Margin="5,0" CornerRadius="20"/>
        <Button Content="Profile" Command="{Binding NavigateToProfileCommand}" 
                Background="Transparent" Foreground="#2E74A8" 
                Padding="15,10" Margin="5,0" CornerRadius="20"/>
      </StackPanel>
      
      <!-- Recherche et profil -->
      <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">
        <TextBox Text="{Binding SearchQuery}" 
                Watermark="Search books..." 
                Width="200" 
                Margin="0,0,15,0"
                Background="#EBF5FA"
                Foreground="#333333"
                FontWeight="Medium"
                BorderBrush="#2E74A8"
                BorderThickness="1.5"
                CornerRadius="4"
                Padding="8,6">
          <TextBox.Styles>
            <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
              <Setter Property="BorderBrush" Value="#0F5C94"/>
              <Setter Property="BorderThickness" Value="2"/>
              <Setter Property="Background" Value="White"/>
            </Style>
            <Style Selector="TextBox:pointerover /template/ Border#PART_BorderElement">
              <Setter Property="BorderBrush" Value="#0F5C94"/>
            </Style>
            <Style Selector="TextBox /template/ TextBlock#PART_Watermark">
              <Setter Property="Foreground" Value="#777777"/>
              <Setter Property="FontStyle" Value="Italic"/>
            </Style>
          </TextBox.Styles>
        </TextBox>
        <Border CornerRadius="20" Width="40" Height="40" ClipToBounds="True">
          <Image Source="{Binding UserProfilePicture}" Stretch="UniformToFill"/>
        </Border>
        <TextBlock Text="{Binding UserFullName}" VerticalAlignment="Center" Margin="10,0,0,0"/>
      </StackPanel>
    </Grid>
    
    <!-- Contenu principal -->
    <Grid Grid.Row="1" Background="#eff4ff">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="250"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      
      <!-- Filtres -->
      <Border Grid.Column="0" Background="#F8F9FA" Padding="20">
        <StackPanel>
          <TextBlock Text="Filters" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,20" Foreground="#2e74a8"/>
          
          <!-- Catégories -->
          <TextBlock Text="Categories" FontWeight="SemiBold" Margin="0,0,0,10" Foreground="#2e74a8"/>
          <ItemsControl ItemsSource="{Binding Categories}">
            <ItemsControl.ItemTemplate>
              <DataTemplate x:DataType="vm:CategoryViewModel">
                <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected}" Margin="0,5,0,5" Foreground="#2e74a8"/>
              </DataTemplate>
            </ItemsControl.ItemTemplate>
          </ItemsControl>
          
          <!-- Disponibilité -->
          <TextBlock Text="Availability" FontWeight="SemiBold" Margin="0,20,0,10" Foreground="#2e74a8"/>
          <RadioButton Content="Available" IsChecked="{Binding IsAvailableOnly}" GroupName="Availability" Margin="0,5,0,5" Foreground="#2e74a8"/>
          <RadioButton Content="All" IsChecked="{Binding !IsAvailableOnly}" GroupName="Availability" Margin="0,5,0,5" Foreground="#2e74a8"/>
          
          <!-- Langue -->
          <TextBlock Text="Language" FontWeight="SemiBold" Margin="0,20,0,10" Foreground="#2e74a8"/>
          <ItemsControl ItemsSource="{Binding Languages}">
            <ItemsControl.ItemTemplate>
              <DataTemplate x:DataType="vm:LanguageViewModel">
                <RadioButton Content="{Binding Name}" IsChecked="{Binding IsSelected}" GroupName="Language" Margin="0,5,0,5" Foreground="#2e74a8"/>
              </DataTemplate>
            </ItemsControl.ItemTemplate>
          </ItemsControl>
          
          <!-- Bouton d'application des filtres -->
          <Button Content="Apply Filters" Command="{Binding ApplyFiltersCommand}" 
                  Background="#2E74A8" Foreground="White" 
                  HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
                  Height="40" CornerRadius="4" Margin="0,20,0,0"/>
        </StackPanel>
      </Border>
      
      <!-- Liste des livres -->
      <Grid Grid.Column="1" Margin="20">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- En-tête avec titre et tri -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
          </Grid.ColumnDefinitions>
          
          <TextBlock Grid.Column="0" Text="{Binding PageTitle}" FontSize="24" FontWeight="Bold"/>
          
          <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="Sort by:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox SelectedItem="{Binding SelectedSortOption}" ItemsSource="{Binding SortOptions}" Width="150">
              <ComboBox.ItemTemplate>
                <DataTemplate x:DataType="sys:String">
                  <TextBlock Text="{Binding}"/>
                </DataTemplate>
              </ComboBox.ItemTemplate>
            </ComboBox>
          </StackPanel>
        </Grid>
        
        <!-- Grille de livres -->
        <ScrollViewer Grid.Row="1">
          <Panel>
            <ItemsControl ItemsSource="{Binding Books}">
              <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                  <WrapPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
              </ItemsControl.ItemsPanel>
              <ItemsControl.ItemTemplate>
                <DataTemplate x:DataType="vm:BookViewModel">
                  <Border Background="{Binding BackgroundColor}" Width="220" Height="250" CornerRadius="8" Padding="15" Margin="0,0,15,15">
                    <Grid>
                      <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                      </Grid.RowDefinitions>
                      
                      <!-- Book cover image -->
                      <Border Grid.Row="0" Width="90" Height="120" CornerRadius="4" 
                              ClipToBounds="True" HorizontalAlignment="Center" Margin="0,0,0,10">
                        <Image Source="{Binding CoverImageUrl}" Stretch="UniformToFill"/>
                      </Border>
                      
                      <!-- Statut de disponibilité -->
                      <Border Grid.Row="1" Background="{Binding AvailabilityColor}" CornerRadius="15" 
                              HorizontalAlignment="Center" Padding="10,5" Margin="0,0,0,10">
                        <TextBlock Text="{Binding AvailabilityStatus}" Foreground="White" FontSize="12"/>
                      </Border>
                      
                      <!-- Titre du livre -->
                      <TextBlock Grid.Row="2" Text="{Binding Title}" FontWeight="SemiBold" FontSize="16" 
                                 HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"/>
                      
                      <!-- Auteur -->
                      <TextBlock Grid.Row="3" Text="{Binding Author}" FontSize="14" 
                                 HorizontalAlignment="Center" Margin="0,5,0,5"/>
                      
                      <!-- Catégorie -->
                      <TextBlock Grid.Row="4" Text="{Binding Category}" FontSize="12" Foreground="Gray" 
                                 HorizontalAlignment="Center" Margin="0,0,0,10"/>
                      
                      <!-- Bouton d'action -->
                      <Button Grid.Row="5" Content="{Binding ActionButtonText}" Command="{Binding ActionCommand}" 
                              Background="{Binding ActionButtonBackground}" Foreground="White" 
                              HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
                              VerticalAlignment="Bottom" Height="40" CornerRadius="4"/>
                    </Grid>
                  </Border>
                </DataTemplate>
              </ItemsControl.ItemTemplate>
            </ItemsControl>
            
            <!-- Loading overlay -->
            <Border Background="#80FFFFFF" IsVisible="{Binding IsLoading}">
              <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="100" Height="4" Margin="0,0,0,10"/>
                <TextBlock Text="Loading books..." FontSize="14" HorizontalAlignment="Center"/>
              </StackPanel>
            </Border>
          </Panel>
        </ScrollViewer>
        
        <!-- Pagination controls -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
          <Button Content="&lt; Previous" 
                 Command="{Binding PreviousPageCommand}" 
                 IsEnabled="{Binding HasPreviousPage}"
                 Background="#2E74A8" Foreground="White" 
                 Padding="15,10" Margin="5,0" CornerRadius="20"/>
          
          <Border Background="#E6F2F8" CornerRadius="20" Padding="15,10" Margin="10,0">
            <TextBlock Text="{Binding CurrentPage, StringFormat='Page {0} of {1}'}" VerticalAlignment="Center">
              <TextBlock.Text>
                <MultiBinding StringFormat="Page {0} of {1}">
                  <Binding Path="CurrentPage" />
                  <Binding Path="TotalPages" />
                </MultiBinding>
              </TextBlock.Text>
            </TextBlock>
          </Border>
          
          <Button Content="Next &gt;" 
                 Command="{Binding NextPageCommand}" 
                 IsEnabled="{Binding HasNextPage}"
                 Background="#2E74A8" Foreground="White" 
                 Padding="15,10" Margin="5,0" CornerRadius="20"/>
                 
          <Button Content="⟳ Refresh" 
                 Command="{Binding RefreshBooksCommand}" 
                 Background="#5C9F24" Foreground="White" 
                 Padding="15,10" Margin="15,0,5,0" CornerRadius="20"/>
        </StackPanel>
      </Grid>
    </Grid>
  </Grid>
</UserControl>
