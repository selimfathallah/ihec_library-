<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:IHECLibrary.ViewModels"
             xmlns:sys="clr-namespace:System;assembly=System.Runtime"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
             x:Class="IHECLibrary.Views.LibraryView"
             x:DataType="vm:LibraryViewModel">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    
    <!-- Barre de navigation -->
    <Grid Grid.Row="0" Background="White" Height="70">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>
      
      <!-- Logo et titre -->
      <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
        <TextBlock Text="IHEC Library" FontSize="24" FontWeight="Bold" Foreground="#2E74A8"/>
      </StackPanel>
      
      <!-- Menu de navigation -->
      <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button Content="Home" Command="{Binding NavigateToHomeCommand}" 
                Background="Transparent" Foreground="#2E74A8" 
                Padding="15,10" Margin="5,0" CornerRadius="20"/>
        <Button Content="Library" Command="{Binding NavigateToLibraryCommand}" 
                Background="#E6F2F8" Foreground="#2E74A8" 
                Padding="15,10" Margin="5,0" CornerRadius="20"/>
        <Button Content="HEC 1.0" Command="{Binding NavigateToChatbotCommand}" 
                Background="Transparent" Foreground="#2E74A8" 
                Padding="15,10" Margin="5,0" CornerRadius="20"/>
        <Button Content="Profile" Command="{Binding NavigateToProfileCommand}" 
                Background="Transparent" Foreground="#2E74A8" 
                Padding="15,10" Margin="5,0" CornerRadius="20"/>
      </StackPanel>
      
      <!-- Recherche et profil -->
      <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">
        <Border CornerRadius="15" Padding="10,7,10,7" Background="#F0F2F5" Margin="0,0,10,0">
          <TextBox Text="{Binding SearchQuery}" Watermark="Search books..." Width="200" 
                 BorderThickness="0" Background="Transparent"/>
        </Border>
        <Grid Margin="5,0,0,0">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
          </Grid.ColumnDefinitions>
          
          <Border Grid.Column="0" CornerRadius="50" Width="32" Height="32" ClipToBounds="True" 
                  Margin="0,0,8,0" Background="#F0F2F5">
            <Image Source="{Binding UserProfilePicture}" Stretch="UniformToFill"/>
          </Border>
          <TextBlock Grid.Column="1" Text="{Binding UserFullName}" VerticalAlignment="Center" 
                     FontSize="13" FontWeight="SemiBold"/>
        </Grid>
      </StackPanel>
    </Grid>
    
    <!-- Contenu principal -->
    <Grid Grid.Row="1" Background="#eff4ff">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="250"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      
      <!-- Filtres -->
      <Border Grid.Column="0" Background="#F8F9FA" Padding="20">
        <StackPanel>
          <TextBlock Text="Filters" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,20" Foreground="#2e74a8"/>
          
          <!-- Catégories -->
          <TextBlock Text="Categories" FontWeight="SemiBold" Margin="0,0,0,10" Foreground="#2e74a8"/>
          <ItemsControl ItemsSource="{Binding Categories}">
            <ItemsControl.ItemTemplate>
              <DataTemplate x:DataType="vm:CategoryViewModel">
                <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected}" Margin="0,5,0,5" Foreground="#2e74a8"/>
              </DataTemplate>
            </ItemsControl.ItemTemplate>
          </ItemsControl>
          
          <!-- Disponibilité -->
          <TextBlock Text="Availability" FontWeight="SemiBold" Margin="0,20,0,10" Foreground="#2e74a8"/>
          <RadioButton Content="Available" IsChecked="{Binding IsAvailableOnly}" GroupName="Availability" Margin="0,5,0,5" Foreground="#2e74a8"/>
          <RadioButton Content="All" IsChecked="{Binding !IsAvailableOnly}" GroupName="Availability" Margin="0,5,0,5" Foreground="#2e74a8"/>
          
          <!-- Langue -->
          <TextBlock Text="Language" FontWeight="SemiBold" Margin="0,20,0,10" Foreground="#2e74a8"/>
          <ItemsControl ItemsSource="{Binding Languages}">
            <ItemsControl.ItemTemplate>
              <DataTemplate x:DataType="vm:LanguageViewModel">
                <RadioButton Content="{Binding Name}" IsChecked="{Binding IsSelected}" GroupName="Language" Margin="0,5,0,5" Foreground="#2e74a8"/>
              </DataTemplate>
            </ItemsControl.ItemTemplate>
          </ItemsControl>
          
          <!-- Bouton d'application des filtres -->
          <Button Content="Apply Filters" Command="{Binding ApplyFiltersCommand}" 
                  Background="#2E74A8" Foreground="White" 
                  HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
                  Height="40" CornerRadius="4" Margin="0,20,0,0"/>
        </StackPanel>
      </Border>
      
      <!-- Liste des livres -->
      <Grid Grid.Column="1" Margin="20">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- En-tête avec titre et tri -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
          </Grid.ColumnDefinitions>
          
          <TextBlock Grid.Column="0" Text="{Binding PageTitle}" FontSize="24" FontWeight="Bold"/>
          
          <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="Sort by:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox SelectedItem="{Binding SelectedSortOption}" ItemsSource="{Binding SortOptions}" Width="150">
              <ComboBox.ItemTemplate>
                <DataTemplate x:DataType="sys:String">
                  <TextBlock Text="{Binding}"/>
                </DataTemplate>
              </ComboBox.ItemTemplate>
            </ComboBox>
          </StackPanel>
        </Grid>
        
        <!-- Grille de livres -->
        <ScrollViewer Grid.Row="1">
          <Panel>
            <ItemsControl ItemsSource="{Binding Books}">
              <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                  <WrapPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
              </ItemsControl.ItemsPanel>
              <ItemsControl.ItemTemplate>
                <DataTemplate x:DataType="vm:BookViewModel">
                  <Border Width="240" Height="260" Margin="0,0,20,20" CornerRadius="10">
                    <Border.Background>
                      <SolidColorBrush Color="{Binding CardColor}" />
                    </Border.Background>
                    <Grid Margin="15">
                      <Grid.RowDefinitions>
                        <RowDefinition Height="100"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                      </Grid.RowDefinitions>
                      
                      <!-- Book Icon -->
                      <Border Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Panel>
                          <!-- Book icon with orange color -->
                          <Border Width="70" Height="80" CornerRadius="3" Background="#FF8370" BorderThickness="2" BorderBrush="#000000">
                            <!-- Book Cover Label -->
                            <Border Width="40" Height="20" VerticalAlignment="Top" Margin="0,12,0,0" 
                                    Background="#FFF8E1" BorderBrush="#000000" BorderThickness="1" 
                                    HorizontalAlignment="Center" CornerRadius="2" />
                          </Border>
                          <!-- Book bottom part -->
                          <Border Width="70" Height="10" VerticalAlignment="Bottom" Background="#FFF8E1" 
                                  BorderBrush="#000000" BorderThickness="1,0,1,1" CornerRadius="0,0,3,3" 
                                  Margin="0,70,0,0" />
                        </Panel>
                      </Border>
                      
                      <!-- Availability Badge -->
                      <Border Grid.Row="1" Background="{Binding IsAvailable, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#4CAF50,#F44336'}"
                              CornerRadius="15" HorizontalAlignment="Center" Padding="12,4" Margin="0,10,0,15">
                        <TextBlock Text="{Binding IsAvailable, Converter={StaticResource BoolToStringConverter}, ConverterParameter='Available,Unavailable'}" 
                                   Foreground="White" FontSize="12" FontWeight="SemiBold"/>
                      </Border>
                      
                      <!-- Book Title -->
                      <TextBlock Grid.Row="2" Text="{Binding Title}" 
                                 FontWeight="SemiBold" FontSize="16" 
                                 HorizontalAlignment="Left" TextWrapping="Wrap" 
                                 MaxHeight="45" TextTrimming="CharacterEllipsis"/>
                      
                      <!-- Author -->
                      <TextBlock Grid.Row="3" Text="{Binding Author}" 
                                 FontSize="14" 
                                 HorizontalAlignment="Left" Margin="0,5,0,0"/>
                      
                      <!-- Category -->
                      <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,5,0,10">
                        <TextBlock Text="Category: " FontSize="12" Opacity="0.7"/>
                        <TextBlock Text="{Binding Category}" FontSize="12" FontWeight="Medium"/>
                      </StackPanel>
                      
                      <!-- Action Button -->
                      <Button Grid.Row="5" Command="{Binding ActionCommand}" 
                              Height="38" CornerRadius="20" 
                              VerticalAlignment="Bottom" 
                              VerticalContentAlignment="Center"
                              HorizontalAlignment="Stretch"
                              HorizontalContentAlignment="Center">
                        <Button.Background>
                          <SolidColorBrush Color="{Binding IsAvailable, Converter={StaticResource BoolToColorConverter}, ConverterParameter='#4169E1,White'}" />
                        </Button.Background>
                        <Button.Foreground>
                          <SolidColorBrush Color="{Binding IsAvailable, Converter={StaticResource BoolToColorConverter}, ConverterParameter='White,#4169E1'}" />
                        </Button.Foreground>
                        <Button.BorderBrush>
                          <SolidColorBrush Color="{Binding IsAvailable, Converter={StaticResource BoolToColorConverter}, ConverterParameter='Transparent,#4169E1'}" />
                        </Button.BorderBrush>
                        <Button.BorderThickness>
                          <Thickness>1</Thickness>
                        </Button.BorderThickness>
                        <TextBlock Text="{Binding IsAvailable, Converter={StaticResource BoolToStringConverter}, ConverterParameter='Borrow,Reserve'}"/>
                      </Button>
                    </Grid>
                  </Border>
                </DataTemplate>
              </ItemsControl.ItemTemplate>
            </ItemsControl>
            
            <!-- Loading overlay -->
            <Border Background="#80FFFFFF" IsVisible="{Binding IsLoading}">
              <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="100" Height="4" Margin="0,0,0,10"/>
                <TextBlock Text="Loading books..." FontSize="14" HorizontalAlignment="Center"/>
              </StackPanel>
            </Border>
          </Panel>
        </ScrollViewer>
        
        <!-- Pagination controls -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
          <Button Content="&lt; Previous" 
                 Command="{Binding PreviousPageCommand}" 
                 IsEnabled="{Binding HasPreviousPage}"
                 Background="#2E74A8" Foreground="White" 
                 Padding="15,10" Margin="5,0" CornerRadius="20"/>
          
          <Border Background="#E6F2F8" CornerRadius="20" Padding="15,10" Margin="10,0">
            <TextBlock Text="{Binding CurrentPage, StringFormat='Page {0} of {1}'}" VerticalAlignment="Center">
              <TextBlock.Text>
                <MultiBinding StringFormat="Page {0} of {1}">
                  <Binding Path="CurrentPage" />
                  <Binding Path="TotalPages" />
                </MultiBinding>
              </TextBlock.Text>
            </TextBlock>
          </Border>
          
          <Button Content="Next &gt;" 
                 Command="{Binding NextPageCommand}" 
                 IsEnabled="{Binding HasNextPage}"
                 Background="#2E74A8" Foreground="White" 
                 Padding="15,10" Margin="5,0" CornerRadius="20"/>
                 
          <Button Content="⟳ Refresh" 
                 Command="{Binding RefreshBooksCommand}" 
                 Background="#5C9F24" Foreground="White" 
                 Padding="15,10" Margin="15,0,5,0" CornerRadius="20"/>
        </StackPanel>
      </Grid>
    </Grid>
  </Grid>
</UserControl>
