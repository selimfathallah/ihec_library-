<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:IHECLibrary.ViewModels"
             xmlns:sys="clr-namespace:System;assembly=System.Runtime"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="IHECLibrary.Views.RegisterView"
             x:DataType="vm:RegisterViewModel">

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="450" />
    </Grid.ColumnDefinitions>

    <!-- Partie gauche avec logo et image -->
    <Grid Grid.Column="0" Background="#E6F2F8">
      <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="IHEC" FontSize="60" FontWeight="Bold" Foreground="#2E74A8" HorizontalAlignment="Center"/>
        <TextBlock Text="Library" FontSize="60" FontWeight="Bold" Foreground="#2E74A8" HorizontalAlignment="Center" Margin="0,-20,0,0"/>
        <Image Source="/Assets/student_with_books.png" Width="300" Height="300" Margin="0,20,0,0"/>
      </StackPanel>
    </Grid>

    <!-- Partie droite avec formulaire d'inscription -->
    <Border Grid.Column="1" Background="White" Padding="30">
      <ScrollViewer>
        <StackPanel>
          <TextBlock Text="Create your account" FontSize="24" FontWeight="SemiBold" Margin="0,0,0,20"/>
          
          <TextBlock Text="Email" Margin="0,0,0,5"/>
          <TextBox Text="{Binding Email}" Watermark="Email" Height="40" Margin="0,0,0,5"/>
          <TextBlock Text="Must use your college email (@ihec.ucar.tn)" FontSize="12" Foreground="Gray" Margin="0,0,0,15"/>
          
          <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" Margin="0,0,0,15">
            <TextBlock Text="First Name" Grid.Row="0" Grid.Column="0" Margin="0,0,10,5"/>
            <TextBox Text="{Binding FirstName}" Watermark="First Name" Grid.Row="1" Grid.Column="0" Height="40" Margin="0,0,10,0"/>
            
            <TextBlock Text="Last Name" Grid.Row="0" Grid.Column="1" Margin="10,0,0,5"/>
            <TextBox Text="{Binding LastName}" Watermark="Last Name" Grid.Row="1" Grid.Column="1" Height="40" Margin="10,0,0,0"/>
          </Grid>
          
          <TextBlock Text="Phone Number" Margin="0,0,0,5"/>
          <Grid ColumnDefinitions="Auto,*">
            <Border Background="#F0F0F0" Width="60" Height="40" VerticalAlignment="Center" HorizontalAlignment="Left">
              <TextBlock Text="+216" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>
            <TextBox Text="{Binding PhoneNumber}" Watermark="Phone Number" Grid.Column="1" Height="40" Margin="0,0,0,15"/>
          </Grid>
          
          <TextBlock Text="Level of Study" Margin="0,0,0,5"/>
          <ComboBox SelectedItem="{Binding SelectedLevel}" ItemsSource="{Binding LevelOptions}" 
                    HorizontalAlignment="Stretch" Height="40" Margin="0,0,0,15">
            <ComboBox.ItemTemplate>
              <DataTemplate x:DataType="sys:String">
                <TextBlock Text="{Binding}"/>
              </DataTemplate>
            </ComboBox.ItemTemplate>
          </ComboBox>
          
          <TextBlock Text="Field of Study" Margin="0,0,0,5"/>
          <ComboBox SelectedItem="{Binding SelectedField}" ItemsSource="{Binding FieldOptions}" 
                    HorizontalAlignment="Stretch" Height="40" Margin="0,0,0,15">
            <ComboBox.ItemTemplate>
              <DataTemplate x:DataType="sys:String">
                <TextBlock Text="{Binding}"/>
              </DataTemplate>
            </ComboBox.ItemTemplate>
          </ComboBox>
          
          <TextBlock Text="Password" Margin="0,0,0,5"/>
          <TextBox Text="{Binding Password}" PasswordChar="â€¢" Watermark="Password" Height="40" Margin="0,0,0,15"/>
          
          <Button Content="Create" Command="{Binding RegisterCommand}" 
                  Background="#2E74A8" Foreground="White" 
                  HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
                  Height="50" CornerRadius="4" Margin="0,0,0,20"/>
          
          <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <TextBlock Text="Or continue with" VerticalAlignment="Center"/>
          </StackPanel>
          
          <Button Command="{Binding GoogleSignInCommand}" 
                  HorizontalAlignment="Center" Background="Transparent" Padding="0">
            <Image Source="/Assets/google_logo.png" Width="40" Height="40"/>
          </Button>
          
          <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <TextBlock Text="Already have an account? " VerticalAlignment="Center"/>
            <Button Content="Sign In" Command="{Binding GoToLoginCommand}" 
                    Background="Transparent" Foreground="#2E74A8" Padding="0"/>
          </StackPanel>
        </StackPanel>
      </ScrollViewer>
    </Border>
  </Grid>
</UserControl>
