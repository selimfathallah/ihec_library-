<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:IHECLibrary.ViewModels"
             xmlns:sys="clr-namespace:System;assembly=System.Runtime"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="IHECLibrary.Views.RegisterView"
             x:DataType="vm:RegisterViewModel">

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="450" />
    </Grid.ColumnDefinitions>

    <!-- Partie gauche avec logo et illustration vectorielle -->
    <Grid Grid.Column="0" Background="#E6F2F8">
      <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="IHEC" FontSize="60" FontWeight="Bold" Foreground="#2E74A8" HorizontalAlignment="Center"/>
        <TextBlock Text="Library" FontSize="60" FontWeight="Bold" Foreground="#2E74A8" HorizontalAlignment="Center" Margin="0,-20,0,0"/>
        
        <!-- Vector-based student with books illustration -->
        <Canvas Width="300" Height="300" Margin="0,20,0,0">
          <!-- Student figure -->
          <Ellipse Canvas.Left="130" Canvas.Top="30" Width="60" Height="60" 
                   Fill="#2E74A8"/>
          <Path Canvas.Left="100" Canvas.Top="90" 
                Data="M 60,0 C 30,60 40,120 60,180 L 20,180 C 0,120 10,60 0,0 Z" 
                Fill="#2E74A8"/>
          <Path Canvas.Left="140" Canvas.Top="90" 
                Data="M 0,0 C 30,60 20,120 0,180 L 40,180 C 60,120 50,60 60,0 Z" 
                Fill="#2E74A8"/>
          
          <!-- Books in arms -->
          <Rectangle Canvas.Left="80" Canvas.Top="120" Width="160" Height="30" 
                     Fill="#4390C9" RadiusX="5" RadiusY="5"/>
          <Rectangle Canvas.Left="85" Canvas.Top="110" Width="150" Height="20" 
                     Fill="#7AADD6" RadiusX="5" RadiusY="5"/>
          <Rectangle Canvas.Left="95" Canvas.Top="100" Width="130" Height="15" 
                     Fill="#B3D7EB" RadiusX="5" RadiusY="5"/>
          
          <!-- Student face features -->
          <Ellipse Canvas.Left="145" Canvas.Top="45" Width="8" Height="8" 
                   Fill="White"/>
          <Ellipse Canvas.Left="165" Canvas.Top="45" Width="8" Height="8" 
                   Fill="White"/>
          <Path Canvas.Left="150" Canvas.Top="60" 
                Data="M 0,0 C 5,5 15,5 20,0" 
                Stroke="White" StrokeThickness="2" Fill="Transparent"/>
        </Canvas>
      </StackPanel>
    </Grid>

    <!-- Partie droite avec formulaire d'inscription -->
    <Border Grid.Column="1" Background="White" Padding="30">
      <ScrollViewer>
        <StackPanel>
          <TextBlock Text="Create your account" FontSize="24" FontWeight="SemiBold" Margin="0,0,0,20"/>
          
          <TextBlock Text="Email" Margin="0,0,0,5"/>
          <TextBox Text="{Binding Email}" Watermark="Email" Height="40" Margin="0,0,0,5"/>
          <TextBlock Text="Must use your college email (@ihec.ucar.tn)" FontSize="12" Foreground="Gray" Margin="0,0,0,15"/>
          
          <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" Margin="0,0,0,15">
            <TextBlock Text="First Name" Grid.Row="0" Grid.Column="0" Margin="0,0,10,5"/>
            <TextBox Text="{Binding FirstName}" Watermark="First Name" Grid.Row="1" Grid.Column="0" Height="40" Margin="0,0,10,0"/>
            
            <TextBlock Text="Last Name" Grid.Row="0" Grid.Column="1" Margin="10,0,0,5"/>
            <TextBox Text="{Binding LastName}" Watermark="Last Name" Grid.Row="1" Grid.Column="1" Height="40" Margin="10,0,0,0"/>
          </Grid>
          
          <TextBlock Text="Phone Number" Margin="0,0,0,5"/>
          <Grid ColumnDefinitions="Auto,*">
            <Border Background="#F0F0F0" Width="60" Height="40" VerticalAlignment="Center" HorizontalAlignment="Left">
              <TextBlock Text="+216" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>
            <TextBox Text="{Binding PhoneNumber}" Watermark="Phone Number" Grid.Column="1" Height="40" Margin="0,0,0,15"/>
          </Grid>
          
          <TextBlock Text="Level of Study" Margin="0,0,0,5"/>
          <ComboBox SelectedItem="{Binding SelectedLevel}" ItemsSource="{Binding LevelOptions}" 
                    HorizontalAlignment="Stretch" Height="40" Margin="0,0,0,15">
            <ComboBox.ItemTemplate>
              <DataTemplate x:DataType="sys:String">
                <TextBlock Text="{Binding}"/>
              </DataTemplate>
            </ComboBox.ItemTemplate>
          </ComboBox>
          
          <TextBlock Text="Field of Study" Margin="0,0,0,5"/>
          <ComboBox SelectedItem="{Binding SelectedField}" ItemsSource="{Binding FieldOptions}" 
                    HorizontalAlignment="Stretch" Height="40" Margin="0,0,0,15">
            <ComboBox.ItemTemplate>
              <DataTemplate x:DataType="sys:String">
                <TextBlock Text="{Binding}"/>
              </DataTemplate>
            </ComboBox.ItemTemplate>
          </ComboBox>
          
          <TextBlock Text="Password" Margin="0,0,0,5"/>
          <TextBox Text="{Binding Password}" PasswordChar="â€¢" Watermark="Password" Height="40" Margin="0,0,0,5"/>
          
          <!-- Add visible error message display -->
          <TextBlock Text="{Binding ErrorMessage}" 
                     IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" 
                     Foreground="Red" 
                     TextWrapping="Wrap" 
                     Margin="0,5,0,10"/>
          
          <!-- Create button with loading indicator -->
          <Grid>
            <Button Content="Create" Command="{Binding RegisterCommand}" 
                    Background="#2E74A8" Foreground="White" 
                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
                    Height="50" CornerRadius="4" Margin="0,0,0,20"
                    IsEnabled="{Binding !IsLoading}"/>
            
            <!-- Loading indicator -->
            <ProgressBar IsIndeterminate="True" 
                         IsVisible="{Binding IsLoading}"
                         HorizontalAlignment="Stretch"
                         Height="5"
                         Margin="0,0,0,20"
                         VerticalAlignment="Bottom"/>
          </Grid>
          
          <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <TextBlock Text="Or continue with" VerticalAlignment="Center"/>
          </StackPanel>
          
          <!-- Google styled button with vector logo -->
          <Button Command="{Binding GoogleSignInCommand}" 
                  HorizontalAlignment="Center" Background="White" 
                  BorderBrush="#DDDDDD" BorderThickness="1"
                  Padding="15,8" CornerRadius="4" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" Spacing="10">
              <!-- Google G logo colors -->
              <Canvas Width="20" Height="20">
                <Ellipse Canvas.Left="0" Canvas.Top="0" Width="20" Height="20" 
                         StrokeThickness="0" Fill="Transparent"/>
                <Path Data="M 10,0 A 10,10 0 1,0 10,20 A 10,10 0 1,0 10,0 M 10,2 A 8,8 0 1,0 10,18 A 8,8 0 1,0 10,2"
                      Fill="#FFFFFF" StrokeThickness="0"/>
                <Path Data="M 10,0 A 10,10 0 0,1 20,10 L 10,10 Z" 
                      Fill="#4285F4" StrokeThickness="0"/>
                <Path Data="M 20,10 A 10,10 0 0,1 10,20 L 10,10 Z" 
                      Fill="#34A853" StrokeThickness="0"/>
                <Path Data="M 10,20 A 10,10 0 0,1 0,10 L 10,10 Z" 
                      Fill="#FBBC05" StrokeThickness="0"/>
                <Path Data="M 0,10 A 10,10 0 0,1 10,0 L 10,10 Z" 
                      Fill="#EA4335" StrokeThickness="0"/>
              </Canvas>
              <TextBlock Text="Sign in with Google" VerticalAlignment="Center"/>
            </StackPanel>
          </Button>
          
          <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <TextBlock Text="Already have an account? " VerticalAlignment="Center"/>
            <Button Content="Sign In" Command="{Binding GoToLoginCommand}" 
                    Background="Transparent" Foreground="#2E74A8" Padding="0"/>
          </StackPanel>
        </StackPanel>
      </ScrollViewer>
    </Border>
  </Grid>
</UserControl>
